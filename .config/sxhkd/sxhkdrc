#
# wm independent hotkeys
#

# terminal emulator
super + Return
    $TERM

super + shift + Return
	$TERM -e ssh arzt@192.168.1.74

# program launcher
super + d
    rofi -modi drun -show drun

# make sxhkd reload its configuration files:
# super + ctrl + r
#     pkill -USR1 -x sxhkd

super + alt + w
    firefox

super + alt + s
	steam

super + alt + z
    $TERM -e pulsemixer

super + alt + t
    io.github.kotatogram

super + alt + c
    galculator

super + alt + y
    keepassxc

super + control + shift + o
    shutdown now

super + control + shift + p
    reboot

super + alt + space
    $TERM -e btop

super + alt + m
    bash /home/arzt/bin/multimc

super + alt + o
    flatpak run com.obsproject.Studio

super + alt + v
    virt-manager

Print
    flameshot gui

super + alt + o
	com.obsproject.Studio

super + p
	$TERM -e ~/bin/pkginstall

super + F6
	killall picom || picom -b --experimental-backends

super + alt + n
	nsxiv ~/pics/wallpapers

super + alt + f
	$TERM -e $HOME/.config/lf/lfrun

super + alt + g
	rofi -modi emoji -show emoji

super + F1
	ssh -t arzt@192.168.1.74 "DISPLAY=:0.0 xrandr --output eDP1 --off"

super + F2
	ssh -t arzt@192.168.1.74 "DISPLAY=:0.0 xrandr --output eDP1 --auto"

super + c
	cfgchooser
