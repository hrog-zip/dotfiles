#
# wm independent hotkeys
#

# terminal emulator
super + Return
    alacritty

# program launcher
super + d
    rofi -modi drun -show drun

# make sxhkd reload its configuration files:
# super + ctrl + r
#     pkill -USR1 -x sxhkd

super + alt + w
    firefox

super + alt + s
	steam

super + alt + z
    pavucontrol

super + alt + t
    io.github.kotatogram

super + alt + c
    galculator

super + alt + k
    keepassxc

super + control + shift + o
    shutdown now

super + control + shift + p
    reboot

super + alt + space
    alacritty -e btop

super + alt + m
    bash /home/arzt/bin/multimc

super + alt + o
    flatpak run com.obsproject.Studio

super + alt + v
    virt-manager

Print
    flameshot gui

super + alt + o
	com.obsproject.Studio

super + p
	alacritty -e ~/bin/pkginstall

super + F6
	killall picom || picom -b --experimental-backends

super + alt + n
	nsxiv ~/pics/wallpapers

super + alt + f
	alacritty -e $HOME/.config/lf/lfrun

super + alt + g
	rofi -modi emoji -show emoji

super + control + shift + F12
	killall dwm_autorestart
